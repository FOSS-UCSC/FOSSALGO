#include<iostream>
#include<string>
using namespace std;

string LongestPalindrome(string input_st)
{
    if(input_st.length()<=1)
        return input_st;
    int string_length = input_st.length();
    int palindromeLength = 0;
    bool bArray[string_length] [string_length];

    string resultstring = "";

    for (int len = 0; len < string_length; len++)
    {
        for (int i = 0; i < string_length -1 ; i++)
        {
            int j = i + len;

                if(input_str[i]==input_st[j] && (j-i<=2 || bArray[i+1][j-1]))
                {
                    bArray[i][j]=true;
 
                    if(j-i+1>palindromeLength)
                    {
                       palindromeLength = j-i+1; 
                       resultstring = input_st.substr(i, j+1);
                    }
            }
        }
    }
    return resultstring;


}


int main()
{
    string resultstring = LongestPalindrome("xaabbaa");
    cout<<"The longest substring is " << resultstring <<endl;

}
